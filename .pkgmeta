package-as: Expressive
enable-nolib-creation: no

ignore:
  - Libs/*/*.rockspec
  - Libs/*/*.toc
  - Libs/*/changelog.*
  - Libs/*/CHANGELOG.*
  - Libs/*/docs
  - Libs/*/examples
  - Libs/*/README.*
  - Libs/*/tests
  - README.md
  - CONTRIBUTING.md
  - CODE_OF_CONDUCT.md
  - LICENSE
  - Makefile
  - Scripts

externals:
  Libs/AceLocale-3.0: https://repos.curseforge.com/wow/ace3/trunk/AceLocale-3.0
  Libs/LibStub: https://repos.curseforge.com/wow/libstub/trunk

manual-changelog:
  filename: CHANGELOG.md
  markup-type: markdown
